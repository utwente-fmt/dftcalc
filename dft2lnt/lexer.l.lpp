	class StringLex {
	private:
		char* str;
		int strlen;
		int strmax;

	public:
		StringLex(): str(NULL), strlen(0), strmax(0) {
		}
		void addChar(char c, int windowSize) {
			assert(strlen <= strmax);
			if(strlen>=strmax) {
				strmax = strlen + windowSize;
				str = (char*)realloc(str,strmax);
			}
			str[strlen++] = c;
		}

		void addChar(char c) {
			addChar(c,10);
		}

		char* finalize() {
			addChar('\0',1);
			char* s = str;
			resetNoFree();
			return s;
		}

		void resetNoFree() {
			str = NULL;
			strlen = 0;
			strmax = 0;
		}

		void reset() {
			if(str) free(str);
			str = NULL;
			strlen = 0;
			strmax = 0;
		}
	};
