		buffer[buflen++] = c;
	}
	while( (c = yyinput(yyscanner)) != ' ' && c != EOF && c != '\r' && c != '\n' ) {
		buffer[buflen++] = c;
	}
	if(buffer[buflen-1]=='"') {
		buffer[buflen-1] = '\0';
	} else {
		buffer[buflen] = '\0';
	}

	//printf("found #line %i %s\n",line,buffer);
	yylloc->set(std::string(buffer),line);
}

"/*" {
